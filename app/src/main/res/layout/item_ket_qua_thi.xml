<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/selecter"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="24sp"
            android:id="@+id/id_item_diem_thi_sv_stt"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/md_black_1000"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/ic_student"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="35dp" />
        <View
            android:layout_width="1dp"
            android:background="@color/md_blue_grey_100"
            android:layout_margin="5dp"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="Tên Sinh Viên"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:textColor="@color/md_black_1000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:id="@+id/id_item_diem_thi_sv_tensv"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Mã sinh viên"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:id="@+id/id_item_diem_thi_sv_masv"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Lần 1: "
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:id="@+id/id_item_diem_thi_sv_l1"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Lần 2: "
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:id="@+id/id_item_diem_thi_sv_l2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/id_item_diem_thi_sv_gc"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>