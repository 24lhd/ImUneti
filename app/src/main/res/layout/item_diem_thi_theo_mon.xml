<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_item"
    android:layout_marginBottom="@dimen/margin_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/selecter"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="24sp"
                android:id="@+id/id_item_diem_thi_lop_stt"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/md_black_1000"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/ic_exam"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_height="0dp" />
            <View
                android:layout_width="1dp"
                android:background="@color/md_blue_grey_100"
                android:layout_margin="@dimen/margin_view"
                android:layout_height="match_parent"></View>
            <TextView
                android:layout_width="48dp"
                android:text="D+"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/id_item_diem_thi_lop_dc"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/md_red_500"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:background="@color/md_blue_grey_100"
                android:layout_margin="@dimen/margin_view"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Tên Lớp"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:textColor="@color/md_black_1000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:id="@+id/id_item_diem_thi_lop_tenlop"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ngày có: "
                        android:singleLine="true"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:layout_weight="1.5"

                        android:id="@+id/id_item_diem_thi_lop_n1"
                        android:singleLine="true"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ngày có: "
                        android:singleLine="true"
                        android:id="@+id/name_ngay2"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/id_item_diem_thi_lop_n2"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:text="ghichu:"
                    android:layout_gravity="center"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:singleLine="true"
                    android:gravity="left"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_item_diem_thi_lop_gc" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin ="@dimen/margin_view_inner"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:src="@drawable/ic_exam"
                    android:id="@+id/im_diem"
                    android:layout_marginTop="@dimen/margin_view_inner"
                    android:layout_marginRight="@dimen/margin_view_inner"
                    android:layout_marginBottom="@dimen/margin_view_inner"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_view"
            android:layout_marginRight="@dimen/margin_view"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_view_inner"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Lần 1: "
                android:id="@+id/fm_l1"
                android:gravity="center"
                android:layout_gravity="center"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/md_blue_500"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/id_item_diem_thi_lop_l1"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:text="TK  lần 1: "
                android:id="@+id/fm_l3"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/md_blue_500"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/id_item_diem_thi_lop_tk1"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Lần 2: "
                android:gravity="center"
                android:id="@+id/name_l2"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/md_blue_500"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/id_item_diem_thi_lop_l2"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="TK lần 2: "
                android:gravity="center"
                android:id="@+id/name_tkl2"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/md_blue_500"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/id_item_diem_thi_lop_tk2"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>