<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_item"
    android:layout_marginBottom="@dimen/margin_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_view_inner"
        android:layout_marginBottom="@dimen/margin_view_inner"
        android:background="@drawable/selecter"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
           android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="24sp"
                android:id="@+id/id_item_lich_thi_stt"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_view_inner"
                android:layout_marginRight="@dimen/margin_view_inner"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/md_black_1000"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="35dp"
                android:src="@drawable/ic_plan_test"
                android:layout_margin="@dimen/margin_view"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_height="35dp" />
            <View
                android:layout_width="1dp"
                android:background="@color/md_blue_grey_100"
                android:layout_margin="5dp"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tên Lớp"
                    android:layout_gravity="left"
                    android:textColor="@color/md_black_1000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:id="@+id/id_item_lich_thi_tenlop"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Số báo danh: "
                        android:layout_gravity="center"
                        android:textColor="@color/md_blue_500"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="so bao danh"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/id_item_lich_thi_sbd"
                        android:textColor="@color/colorAccent"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Lần: "
                        android:layout_gravity="center"
                        android:textColor="@color/md_blue_500"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:layout_gravity="center"
                        android:id="@+id/id_item_lich_thi_lan"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_view_inner"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Phòng"

                android:layout_gravity="center"
                android:id="@+id/id_item_lich_thi_phong"
                android:textColor="@color/md_blue_500"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Giờ"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/id_item_lich_thi_gio"
                android:textColor="@color/md_blue_500"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Thứ"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/md_blue_500"
                android:id="@+id/id_item_lich_thi_thu"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Ngày"
                android:layout_gravity="center"
                android:textColor="@color/md_blue_500"
                android:id="@+id/id_item_lich_thi_ngay"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>